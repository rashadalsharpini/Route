@model BusinessLogic.DataTransferObjects.EmployeeDtos.EmployeeGetById

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1 class="my-5 w-75">Employee Details</h1>

<div class="text-center">
    <img class="rounded-circle"
         src="@(string.IsNullOrEmpty(Model.Image) 
                  ? Url.Content("~/Files/Images/placeholder.png") 
                  : Url.Content("~/Files/Images/" + Model.Image))"
         style="width: 150px; height: 150px; object-fit: cover;" />
</div>


<ul class="nav nav-tabs" id="employeeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="row">
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="DepartmentName"></label>
                <input asp-for="DepartmentName" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="HireDate"></label>
                <input asp-for="HireDate" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <label class="form-label" asp-for="Type"></label>
                <input asp-for="Type" class="form-control" readonly />
            </div>
            <div class="form-group mb-3 col-6">
                <input asp-for="IsActive" class="form-check-input" disabled />
                <label class="col-form-label" asp-for="IsActive"></label>
            </div>
        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
    </div>
</div>

